@using CafeManagent.dto.request.OrderModuleDTO
@model OrderDraftDetailsDto

@{
    ViewData["Title"] = "Xác nhận Đơn Hàng Nháp";
}

<div class="container py-5">
    <h2 class="text-primary fw-bold mb-4">
        <i class="fas fa-file-alt me-2"></i> Xác nhận Đơn Hàng Nháp
    </h2>

    <div class="row">
        <div class="col-lg-8">
       

            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white fw-semibold">
                    Chi tiết Sản phẩm
                </div>
                <div class="card-body p-0">
                    <table class="table table-striped table-hover mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th>Sản phẩm</th>
                                <th class="text-center">SL</th>
                                <th class="text-end">Đơn giá</th>
                                <th class="text-end">Thành tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Draft.Items)
                            {
                                <tr>
                                    <td>@item.ProductName</td>
                                    <td class="text-center">@item.Quantity</td>
                                    <td class="text-end">@item.UnitPrice.ToString("N0") VNĐ</td>
                                    <td class="text-end fw-bold">@((item.Quantity * item.UnitPrice).ToString("N0")) VNĐ</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light fw-semibold">
                    Thông tin Khách hàng & Ghi chú
                </div>
                <div class="card-body">
                    <p class="mb-1">
                        <strong>Tên KH:</strong>
                        <span class="badge bg-info">
                            @(Model.Customer != null ? Model.Customer.FullName : "Khách vãng lai")
                        </span>
                    </p>
                    <p class="mb-1"><strong>SĐT:</strong> @(string.IsNullOrEmpty(Model.Draft.CustomerPhone) ? "N/A" : Model.Draft.CustomerPhone)</p>
                    <p class="mb-1"><strong>Điểm tích lũy mới:</strong> <span class="badge bg-success">@Model.PointsEarned điểm</span></p>
                    <p class="mb-0"><strong>Ghi chú đơn hàng:</strong> @(string.IsNullOrEmpty(Model.Draft.Note) ? "Không có" : Model.Draft.Note)</p>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card shadow-lg border-primary mb-4">
                <div class="card-header bg-primary text-white fw-bold text-center">
                    TỔNG TIỀN THANH TOÁN
                </div>
                <div class="card-body">
          
                    <div class="d-flex justify-content-between mb-1">
                        <span>Tạm tính:</span>
                        <span class="fw-bold">@Model.Subtotal.ToString("N0") VNĐ</span>
                    </div>
                    <div class="d-flex justify-content-between mb-1 text-danger">
                        <span>Giảm giá (@Model.Draft.DiscountPercent%):</span>
                        <span class="fw-bold">-@Model.DiscountAmount.ToString("N0") VNĐ</span>
                    </div>
                    <div class="d-flex justify-content-between mb-1">
                        <span>VAT (5%):</span>
                        <span class="fw-bold">@Model.VATAmount.ToString("N0") VNĐ</span>
                    </div>

                    <h3 class="mt-2 pt-2 border-top d-flex justify-content-between text-success">
                        Tổng cộng: <span class="fw-bolder">@Model.GrandTotal.ToString("N0") VNĐ</span>
                    </h3>
                    <hr />

                    <h5 class="fw-semibold text-center mb-3">Chọn Phương Thức Thanh Toán</h5>

                    <div class="form-check mb-2">
                        <input class="form-check-input" type="radio" name="paymentMethod" id="radioCash" value="Cash" checked>
                        <label class="form-check-label fw-bold" for="radioCash">
                            <i class="fas fa-money-bill-wave me-1 text-success"></i> Tiền Mặt
                        </label>
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" type="radio" name="paymentMethod" id="radioOnline" value="Online">
                        <label class="form-check-label fw-bold" for="radioOnline">
                            <i class="fas fa-qrcode me-1 text-warning"></i> Thanh toán Online (VNPay)
                        </label>
                    </div>

                    <div id="qrCodeArea" class="text-center p-3 border rounded shadow-sm bg-light" style="display:none;">
                        <p class="fw-bold text-danger mb-2">Vui lòng quét mã để thanh toán</p>
                        <img id="qrImage" src="" alt="Mã QR VNPay" class="img-fluid border" style="max-width: 150px; height: auto;">
                        <p class="mt-2"><small class="text-muted">Tổng: @Model.GrandTotal.ToString("N0") VNĐ</small></p>
                    </div>
                    <button id="btnCompletePayment" class="btn btn-primary w-100 mt-3" type="button">
                        <i class="fas fa-check-circle me-2"></i> Hoàn tất Thanh toán
                    </button>

                    <form asp-action="CancelDraft" method="post" id="cancelForm">
                        <button type="submit" class="btn btn-outline-secondary w-100 mt-3">
                            <i class="fas fa-arrow-left me-2"></i> Hủy & Quay lại Chỉnh sửa
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            const $qrCodeArea = $('#qrCodeArea');
            const $btnCompletePayment = $('#btnCompletePayment');
            const $qrImage = $('#qrImage');
            let pollingInterval;
            let currentOrderId = 0;
            function updatePaymentUI(method) {
                if (method === 'Cash' && pollingInterval) {
                    clearInterval(pollingInterval);
                }

                if (method === 'Online') {
                    $qrCodeArea.slideUp(200);
                    $qrImage.attr('src', '');
                    $btnCompletePayment.text('Tạo Mã QR VNPay').prop('disabled', false).removeClass('btn-success btn-info').addClass('btn-warning');
                } else { 
                    $qrCodeArea.slideUp(200);
                    $btnCompletePayment.text('Hoàn tất Thanh toán').prop('disabled', false).removeClass('btn-warning btn-info').addClass('btn-success');
                }
            }

            function stopPolling(isSuccess, orderId) {
                if (pollingInterval) {
                    clearInterval(pollingInterval);
                }

                $btnCompletePayment.prop('disabled', false);

                if (isSuccess) {
                    $btnCompletePayment.text('✅ Đã Thanh Toán').removeClass('btn-warning btn-info').addClass('btn-success');
                    $qrCodeArea.find('p:first').text("✅ THANH TOÁN THÀNH CÔNG!");
                    setTimeout(() => {
                        window.location.href = '@Url.Action("Details", "Order")' + '/' + orderId;
                    }, 1000);
                } else {
                    $btnCompletePayment.text('Thanh toán Thất Bại').removeClass('btn-info').addClass('btn-danger');
                    $qrCodeArea.find('p:first').text("❌ THANH TOÁN THẤT BẠI. Vui lòng thử lại.");
                    // Chuyển về trạng thái tạo QR
                    updatePaymentUI('Online');
                }
            }

            // --- HÀM 3: BẮT ĐẦU POLLING CHECK TRẠNG THÁI VNPAY ---
            function startPolling(orderId) {
                currentOrderId = orderId;
                const pollingUrl = '@Url.Action("CheckOrderStatusApi", "Order")' + '?id=' + orderId;

                pollingInterval = setInterval(function () {
                    $.ajax({
                        url: pollingUrl,
                        type: 'GET',
                        cache: false,
                        success: function (response) {
                            if (response.success) {
                                // 3: Hoàn thành / Thanh toán thành công (Do IPN đã cập nhật DB)
                                if (response.status === 3) {
                                    stopPolling(true, response.orderId);
                                }
                                // -1: Đã hủy/Thất bại
                                else if (response.status === -1) {
                                    stopPolling(false, response.orderId);
                                }
                                // 1: Đang chờ (Tiếp tục Polling)
                                else {
                                     $qrCodeArea.find('p:first').text("⏳ Đang chờ xác nhận thanh toán...");
                                }
                            } else {
                                // Lỗi API
                                stopPolling(false, orderId);
                            }
                        },
                        error: function () {
                        }
                    });
                }, 3000); 
            }

            // --- HÀM 4: XỬ LÝ THANH TOÁN TIỀN MẶT (CHỈ GỌI MỘT LẦN) ---
            function processFinalPayment(actionUrl, paymentMethod, $btn) {
                const originalText = $btn.html();
                $btn.prop('disabled', true).html('<span class="spinner-border spinner-border-sm me-2"></span> Đang xử lý...');

                $.ajax({
                    url: actionUrl,
                    type: 'POST',
                    data: { paymentMethod: paymentMethod },
                    success: function (response) {
                        if (response.success) {
                            window.location.href = response.redirectUrl;
                        } else {
                            alert('Lỗi: ' + response.message);
                            $btn.prop('disabled', false).html(originalText);
                        }
                    },
                    error: function () {
                        alert('Lỗi kết nối server. Vui lòng thử lại.');
                        $btn.prop('disabled', false).html(originalText);
                    }
                });
            }

            // --- HÀM 5: TẠO QR VÀ BẮT ĐẦU POLLING ---
            function generateVnPayQr(actionUrl, $btn) {
                const originalText = $btn.html();
                // Dừng polling cũ nếu có
                if (pollingInterval) clearInterval(pollingInterval);

                $btn.prop('disabled', true).html('<span class="spinner-border spinner-border-sm me-2"></span> Đang tạo QR và Chờ...');

                $.ajax({
                    url: actionUrl,
                    type: 'POST',
                    data: { paymentMethod: 'Online' },
                    success: function (response) {
                        if (response.success) {
                            const vnpayUrl = response.redirectUrl;

                            // Trích xuất OrderId từ URL VNPay (vnp_TxnRef)
                            const urlParams = new URLSearchParams(vnpayUrl.split('?')[1]);
                            const orderIdStr = urlParams.get('vnp_TxnRef');
                            const orderId = parseInt(orderIdStr);
                            if (isNaN(orderId)) {
                                throw new Error("Không thể lấy OrderId từ URL VNPay");
                            }

                            const qrGenUrl = `https://api.qrserver.com/v1/create-qr-code/?size=150x150&data=${encodeURIComponent(vnpayUrl)}`;
                            $qrImage.attr('src', qrGenUrl);
                            $qrCodeArea.slideDown(600);
                            $qrCodeArea.find('p:first').text("Vui lòng quét mã để thanh toán");

                            $btn.text('Chờ Khách hàng Quét').removeClass('btn-warning').addClass('btn-info').prop('disabled', true);
                            startPolling(orderId);

                        } else {
                            alert('Lỗi tạo URL VNPay: ' + response.message);
                            $btn.prop('disabled', false).html(originalText);
                            $('#radioCash').prop('checked', true).trigger('change');
                        }
                    },
                    error: function () {
                        alert('Lỗi kết nối server.');
                        $btn.prop('disabled', false).html(originalText);
                        $('#radioCash').prop('checked', true).trigger('change');
                    }
                });
            }
            $('input[name="paymentMethod"]').off('change').on('change', function () {
                const selectedMethod = $(this).val();
                updatePaymentUI(selectedMethod);

                if (selectedMethod === 'Online') {
                    generateVnPayQr('@Url.Action("ProcessVnPay", "Order")', $btnCompletePayment);
                }
            });

            $btnCompletePayment.off('click').on('click', function () {
                const selectedMethod = $('input[name="paymentMethod"]:checked').val();
                if (selectedMethod === 'Cash') {
                    if (confirm('Xác nhận đã nhận tiền mặt và hoàn tất đơn hàng?')) {
                        processFinalPayment('@Url.Action("CompletePayment", "Order")', 'Cash', $btnCompletePayment);
                    }
                }
                else if (selectedMethod === 'Online' && $btnCompletePayment.text().includes('Tạo Mã QR VNPay')) {
                    generateVnPayQr('@Url.Action("ProcessVnPay", "Order")', $btnCompletePayment);
                }
            });

            updatePaymentUI($('input[name="paymentMethod"]:checked').val());
            $(window).on('beforeunload', function() {
                if (pollingInterval) {
                    clearInterval(pollingInterval);
                }
            });
        });
    </script>
}