@model dynamic

@{
    ViewData["Title"] = "Tạo Đơn Hàng Mới";
    var products = ViewBag.Products as List<CafeManagent.Models.Product>;
}

<div class="container-fluid mt-4">
    <h2 class="mb-4"><i class="fas fa-cash-register"></i> Tạo Đơn Hàng Mới</h2>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="m-0"><i class="fas fa-mug-hot"></i> Menu Sản Phẩm</h5>
                </div>

                <div class="card-body" style="height: 85vh; padding-bottom: 0;">

                    <input type="text" id="productSearch" class="form-control mb-3" placeholder="Tìm kiếm sản phẩm...">

                    <div id="scrollableProductList"
                         style="height: calc(100% - 70px); overflow-y: auto; padding-right: 15px;">

                        <div id="productList" class="row">
                            @if (products != null)
                            {
                                @foreach (var product in products)
                                {
                                    <div class="col-lg-4 col-md-6 mb-4 product-item"
                                         data-name="@product.ProductName.ToLower()"
                                         data-id="@product.ProductId"
                                         data-price="@product.Price"
                                         data-product-name="@product.ProductName">
                                        <div class="card h-100 text-center">
                                            <img src="@product.ProductImage" class="card-img-top" alt="@product.ProductName" style="height: 150px; object-fit: cover;">
                                            <div class="card-body p-2">
                                                <h6 class="card-title mb-1">@product.ProductName</h6>
                                                <p class="card-text text-danger font-weight-bold">@(product.Price.HasValue? product.Price.Value.ToString("N0") : "0") VNĐ</p>
                                            </div>
                                            <div class="card-footer p-2">
                                                <button class="btn btn-sm btn-success btn-add-to-cart">
                                                    <i class="fas fa-plus"></i> Thêm
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="col-12 text-center text-muted">Không có sản phẩm nào đang hoạt động.</div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm sticky-top" style="top: 15px;">
                <div class="card-header bg-success text-white">
                    <h5 class="m-0"><i class="fas fa-shopping-cart"></i> Giỏ Hàng (Cart)</h5>
                </div>
                <div class="card-body">
                    <h6>Thông tin Khách hàng</h6>
                    <div class="form-group mb-2">
                        <input type="text" id="customerPhone" class="form-control" placeholder="SĐT khách hàng">
                        <small id="customerInfo" class="form-text text-muted">Không nhập SĐT.</small>
                    </div>

                    <hr />

                    <h6>Chi tiết Đơn hàng</h6>
                    <div id="cartItems" class="list-group mb-3" style="max-height: 250px; overflow-y: auto;">
                        <div class="text-center text-muted mt-3" id="emptyCartMessage">Giỏ hàng trống.</div>
                    </div>

                    <div class="form-group mb-2">
                        <label for="discountPercent">Giảm giá (%)</label>
                        <input type="number" id="discountPercent" class="form-control" value="0" min="0" max="100" step="1">
                    </div>

                    <div class="mt-3">
                        <p class="mb-1">Tạm tính: <span class="float-right font-weight-bold" id="subtotal">0 VNĐ</span></p>
                        <p class="mb-1">Giảm giá: <span class="float-right font-weight-bold text-danger" id="discountAmount">0 VNĐ</span></p>
                        <p class="mb-1">VAT (5%): <span class="float-right font-weight-bold" id="vatAmount">0 VNĐ</span></p>
                        <h4 class="text-primary">Tổng cộng: <span class="float-right" id="grandTotal">0 VNĐ</span></h4>
                    </div>

                    <div class="form-group mb-3">
                        <label for="orderNote">Ghi chú:</label>
                        <textarea id="orderNote" class="form-control" rows="2"></textarea>
                    </div>

                    <button id="submitDraft" class="btn btn-lg btn-block btn-info w-100 mt-4 shadow-sm">
                        <i class="fas fa-file-alt me-2"></i> Tạo Bản Nháp & Tiếp tục
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/addOrder.js"></script>
}