@model dynamic

@{
    ViewData["Title"] = "Tạo Đơn Hàng Mới";
    var products = ViewBag.Products as List<CafeManagent.Models.Product>;
}

<div class="container-fluid py-4">
    <!-- Tiêu đề trang -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="m-0 text-primary fw-bold">
            <i class="fas fa-cash-register me-2"></i> Tạo Đơn Hàng Mới
        </h2>
        <a href="/Order/Waiter" class="btn btn-outline-secondary btn-sm px-3 shadow-sm">
            <i class="fas fa-arrow-left me-2"></i> Quay lại
        </a>
    </div>

    <div class="row g-4">
        <!-- Cột Menu sản phẩm -->
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-gradient text-white fw-semibold"
                     style="background: linear-gradient(90deg, #007bff, #00b4d8);">
                    <i class="fas fa-mug-hot me-2"></i> Menu Sản Phẩm
                </div>

                <div class="card-body" style="height: 85vh; display: flex; flex-direction: column; padding-bottom: 0;">
                    <!-- Ô tìm kiếm -->
                    <input type="text" id="productSearch" class="form-control mb-3 shadow-sm"
                           placeholder="🔍 Tìm kiếm sản phẩm...">

                    <!-- Danh sách sản phẩm -->
                    <div id="scrollableProductList"
                         style="flex: 1; overflow-y: auto; padding-right: 10px;">
                        <div id="productList" class="row gy-4">
                            @if (products != null && products.Any())
                            {
                                @foreach (var product in products)
                                {
                                    <div class="col-xl-4 col-md-6 col-sm-12 product-item"
                                         data-name="@product.ProductName.ToLower()"
                                         data-id="@product.ProductId"
                                         data-price="@product.Price"
                                         data-product-name="@product.ProductName">
                                        <div class="card border-0 shadow-sm h-100 product-card">
                                            <img src="@product.ProductImage"
                                                 class="card-img-top rounded-top"
                                                 alt="@product.ProductName"
                                                 style="height: 150px; object-fit: cover;">
                                            <div class="card-body p-2">
                                                <h6 class="card-title mb-1 text-truncate">@product.ProductName</h6>
                                                <p class="card-text text-danger fw-bold mb-0">
                                                    @(product.Price.HasValue? product.Price.Value.ToString("N0") : "0") VNĐ
                                                </p>
                                            </div>
                                            <div class="card-footer bg-transparent border-0 p-2">
                                                <button class="btn btn-success btn-sm w-100 btn-add-to-cart shadow-sm">
                                                    <i class="fas fa-plus me-1"></i> Thêm
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="col-12 text-center text-muted py-4">
                                    <i class="fas fa-info-circle me-1"></i> Không có sản phẩm nào đang hoạt động.
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Cột Giỏ hàng -->
        <div class="col-lg-4">
            <div class="card shadow-sm border-0 sticky-top" style="top: 15px;">
                <div class="card-header bg-success text-white fw-semibold">
                    <i class="fas fa-shopping-cart me-2"></i> Giỏ Hàng (Cart)
                </div>

                <div class="card-body">
                    <!-- Thông tin khách hàng -->
                    <h6 class="fw-semibold text-secondary mb-2">
                        <i class="fas fa-user me-1"></i> Thông tin Khách hàng
                    </h6>
                    <div class="form-group mb-3">
                        <input type="text" id="customerPhone" class="form-control shadow-sm"
                               placeholder="Nhập SĐT khách hàng...">
                        <small id="customerInfo" class="form-text text-muted">Không nhập SĐT nếu khách vãng lai.</small>
                    </div>

                    <hr class="my-3" />

                    <!-- Chi tiết đơn hàng -->
                    <h6 class="fw-semibold text-secondary mb-2">
                        <i class="fas fa-list me-1"></i> Chi tiết Đơn hàng
                    </h6>

                    <div id="cartItems" class="list-group mb-3 shadow-sm"
                         style="max-height: 250px; overflow-y: auto; border-radius: 8px;">
                        <div class="text-center text-muted mt-3" id="emptyCartMessage">Giỏ hàng trống.</div>
                    </div>

                    <div class="form-group mb-3">
                        <label for="discountPercent" class="fw-semibold">Giảm giá (%)</label>
                        <input type="number" id="discountPercent" class="form-control shadow-sm"
                               value="0" min="0" max="100" step="1">
                    </div>

                    <div class="border-top pt-3 mb-3">
                        <p class="mb-1">
                            Tạm tính:
                            <span class="float-end fw-bold" id="subtotal">0 VNĐ</span>
                        </p>
                        <p class="mb-1">
                            Giảm giá:
                            <span class="float-end fw-bold text-danger" id="discountAmount">0 VNĐ</span>
                        </p>
                        <p class="mb-1">
                            VAT (5%):
                            <span class="float-end fw-bold" id="vatAmount">0 VNĐ</span>
                        </p>
                        <h5 class="text-primary fw-bold mt-2">
                            Tổng cộng:
                            <span class="float-end" id="grandTotal">0 VNĐ</span>
                        </h5>
                    </div>

                    <div class="form-group mb-3">
                        <label for="orderNote" class="fw-semibold">Ghi chú:</label>
                        <textarea id="orderNote" class="form-control shadow-sm" rows="2"
                                  placeholder="Ghi chú thêm..."></textarea>
                    </div>

                    <button id="submitDraft"
                            class="btn btn-info btn-lg w-100 shadow-sm mt-3 text-white fw-semibold">
                        <i class="fas fa-file-alt me-2"></i> Tạo Bản Nháp & Tiếp tục
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/addOrder.js"></script>
}
