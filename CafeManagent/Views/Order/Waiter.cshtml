                                            @if (order.Status == 0)
                                            {
                                                <button class="btn btn-sm btn-danger cancel-btn" data-id="@order.OrderId" data-bs-toggle="modal" data-bs-target="#confirmCancelModal" title="H·ªßy ƒë∆°n"><i class="fa-solid fa-xmark"></i> H·ªßy</button>
                                            }
                                            else if (order.Status == 2)
                                            {
                                                <button class="btn btn-sm btn-success confirm-btn" data-id="@order.OrderId" data-bs-toggle="modal" data-bs-target="#confirmWaiterModal" title="X√°c nh·∫≠n giao h√†ng & thanh to√°n"><i class="fa-solid fa-check"></i> X√°c nh·∫≠n</button>
