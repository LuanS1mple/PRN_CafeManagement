</div>
<hr />


<div class="row">
    <div class="col-md-12">
        <div class="card bg-light mb-4 shadow-sm">
            <div class="card-header bg-dark text-white fw-bold">ƒê∆°n H√†ng ƒêang Theo D√µi</div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th scope="col" style="width: 5%;">ID</th>
                                <th scope="col" style="width: 20%;">Kh√°ch h√†ng</th>
                                <th scope="col" style="width: 15%;">T·ªïng ti·ªÅn</th>
                                <th scope="col" style="width: 20%;">Th·ªùi gian</th>
                                <th scope="col" style="width: 15%;">Tr·∫°ng th√°i</th>
                                <th scope="col" style="width: 25%;" class="text-end">H√†nh ƒë·ªông</th>
                            </tr>
                        </thead>
                        <tbody id="active-list-waiter">
                            @if (sortedOrders.Any())
                            {
                                @foreach (var order in sortedOrders)
                                {
                                    <tr class="order-row" id="order-@order.OrderId" data-status="@(order.Status ?? 0)">
                                        <th scope="row">#@order.OrderId</th>
