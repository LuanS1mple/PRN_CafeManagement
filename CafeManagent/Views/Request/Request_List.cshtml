@using CafeManagent.dto.response;
@model WaitingRequests;
<div class="p-4 bg-body-secondary min-vh-100">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item"><a href="#">Attendance</a></li>
            <li class="breadcrumb-item active" aria-current="page">Danh sách yêu cầu</li>
        </ol>
    </nav>

    <div class="card shadow-sm border-0 rounded-3 p-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h4 class="fw-semibold mb-0">
                <i class="fa-solid fa-list-check me-2 text-primary"></i>Danh sách yêu cầu thay đổi điểm danh adsfdf
            </h4>
        </div>

        <div class="table-responsive">
            <table class="table table-hover align-middle text-center">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th scope="col"><i class="fa-solid fa-user me-2"></i>Staff Name</th>
                        <th scope="col"><i class="fa-solid fa-heading me-2"></i>Title</th>
                        <th scope="col"><i class="fa-solid fa-align-left me-2"></i>Description</th>
                        <th scope="col"><i class="fa-solid fa-calendar-days me-2"></i>Date</th>
                        <th scope="col"><i class="fa-solid fa-gear me-2"></i>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var request in Model.AttendanceRequests){
                        <tr>
                            <td>@request.Id</td>
                            <td>@request.StaffName</td>
                            <td>@request.Title</td>
                            <td>@request.Description</td>
                            <td>@request.Date</td>
                            <td>
                                <a href="~/request/detailattendancerequest?id=@request.Id"><i class="fa-solid fa-eye"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card shadow-sm border-0 rounded-3 p-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h4 class="fw-semibold mb-0">
                <i class="fa-solid fa-list-check me-2 text-primary"></i>Danh sách yêu cầu thay đổi ca
            </h4>
        </div>

        <div class="table-responsive">
            <table class="table table-hover align-middle text-center">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th scope="col"><i class="fa-solid fa-user me-2"></i>Staff Name</th>
                        <th scope="col"><i class="fa-solid fa-heading me-2"></i>Title</th>
                        <th scope="col"><i class="fa-solid fa-align-left me-2"></i>Description</th>
                        <th scope="col"><i class="fa-solid fa-calendar-days me-2"></i>Date</th>
                        <th scope="col"><i class="fa-solid fa-gear me-2"></i>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var request in Model.ShiftRequests)
                    {
                        <tr>
                            <td>@request.Id</td>
                            <td>@request.StaffName</td>
                            <td>@request.Title</td>
                            <td>@request.Description</td>
                            <td>@request.Date</td>
                            <td>
                                    <a href="~/request/detailattendancerequest?id=@request.Id"
                                       class="btn btn-sm btn-outline-primary me-1">
                                        <i class="fa-solid fa-eye"></i>
                                    </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
