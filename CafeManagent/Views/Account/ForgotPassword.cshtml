@{
    ViewData["Title"] = "Quên mật khẩu";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cafe Manager</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body, html {
            height: 100%;
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #f0f7fb;
        }

        .login-container {
            display: flex;
            height: 100vh;
        }

        .image-panel {
            flex: 1;
            background-image: url('https://amthanhhay.com.vn/wp-content/uploads/2024/09/thom-cau-coffee-19.jpg');
            background-size: cover;
            background-position: center;
        }

        .form-panel {
            flex: 1;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 2rem;
            background-color: #f0f7fb;
        }

        .cafe-manager-header {
            width: 100%;
            max-width: 450px;
            margin-bottom: 2rem;
            color: #17a2b8;
            font-size: 1.5rem;
            font-weight: bold;
            display: flex;
            align-items: center;
        }

        .login-form-card {
            background: white;
            padding: 2.5rem;
            border-radius: 0.5rem;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 450px;
        }

        .form-label-custom {
            font-weight: 500;
            margin-bottom: 0.25rem;
        }

        .btn-primary-custom {
            background-color: #17a2b8;
            border-color: #17a2b8;
        }

            .btn-primary-custom:hover {
                background-color: #138496;
                border-color: #138496;
            }
    </style>
</head>

<body>
    <div class="login-container">
        <div class="image-panel"></div>

        <div class="form-panel">
            <div class="cafe-manager-header">
                <i class="fas fa-coffee me-2" style="color: #17a2b8;"></i>
                <span>Cafe Manager</span>
            </div>

            <div class="login-form-card">
                <h4 class="text-center mb-4 text-info">
                    <i class="fas fa-key me-2"></i>Quên mật khẩu
                </h4>

                <div id="alertArea">
                    @if (ViewData["Error"] != null)
                    {
                        <div class="alert alert-danger text-center">
                            @ViewData["Error"]
                        </div>
                    }
                    else if (ViewData["Success"] != null)
                    {
                        <div class="alert alert-success text-center">
                            @ViewData["Success"]<br />
                            Tự động quay lại trang đăng nhập sau <b id="countdown">5</b> giây...
                        </div>
                        <script>
                            document.addEventListener("DOMContentLoaded", () => {
                                document.querySelector("form").style.display = "none";
                                let count = 5;
                                const interval = setInterval(() => {
                                    count--;
                                    document.getElementById("countdown").textContent = count;
                                    if (count === 0) {
                                        clearInterval(interval);
                                        window.location.href = "/Home/Login";
                                    }
                                }, 1000);
                            });
                        </script>
                    }
                </div>


                <form asp-controller="Account" asp-action="ForgotPassword" method="post">
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        <label class="form-label form-label-custom">Nhập Email để khôi phục mật khẩu</label>
                        <input type="email" class="form-control" name="email" placeholder="Nhập email của bạn" required>
                    </div>

                    <div class="d-grid gap-2 mb-3">
                        <button type="submit" class="btn btn-primary btn-primary-custom py-2">Gửi yêu cầu</button>
                    </div>

                    <div class="text-center mt-3">
                        <a href="/Home/Login" class="btn btn-link text-secondary">← Quay lại đăng nhập</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js"></script>
</body>
</html>
