@{
    ViewData["Title"] = "Đặt lại mật khẩu";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Đặt lại mật khẩu - Cafe Manager</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f0f7fb;
            font-family: Arial, sans-serif;
        }

        .card {
            border-radius: 12px;
            box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.1);
        }

        .btn-info {
            background-color: #17a2b8;
            border: none;
        }

            .btn-info:hover {
                background-color: #138496;
            }

        .fade-in {
            animation: fadeIn 0.5s ease-in-out;
        }
        @keyframes fadeIn {
            from

        {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }
    </style>
</head>

<body>
    <div class="d-flex justify-content-center align-items-center vh-100">
        <div class="card p-4" style="width:400px;">
            <h4 class="text-center text-info mb-4"><i class="fas fa-key me-2"></i>Đặt lại mật khẩu</h4>

            <!-- Hiển thị lỗi ModelState -->
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger fade-in">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <div>@error.ErrorMessage</div>
                    }
                </div>
            }

            <!-- Hiển thị thành công -->
            @if (TempData["SuccessReset"] != null)
            {
                <div class="alert alert-success text-center fade-in">
                    @TempData["SuccessReset"]<br />
                    Tự động quay lại trang đăng nhập sau <b id="countdown">3</b> giây...
                </div>

                <script>
                    document.addEventListener("DOMContentLoaded", () => {
                        document.querySelector("form").style.display = "none"; // Ẩn form
                        let count = 3;
                        const interval = setInterval(() => {
                            count--;
                            document.getElementById("countdown").textContent = count;
                            if (count === 0) {
                                clearInterval(interval);
                                window.location.href = "/Home/Login";
                            }
                        }, 1000);
                    });
                </script>
            }

            <!-- Form đặt lại mật khẩu -->
            <form asp-action="ResetPassword" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="email" value="@ViewBag.Email" />
                <input type="hidden" name="token" value="@ViewBag.Token" />

                <div class="mb-3">
                    <label class="form-label">Mật khẩu mới:</label>
                    <input type="password" name="newPassword" class="form-control" required minlength="6" placeholder="Nhập mật khẩu mới">
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-info py-2">Cập nhật mật khẩu</button>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js"></script>
</body>
</html>
