        kvp => tasks.Count(t => t.Status == kvp.Key) // Value (ví dụ: 5)
    );
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        /* Thêm style cho hàng được chọn */
        .status-row.active {
            background-color: #ebf8ff; /* Tương đương bg-blue-50 của Tailwind */
            font-weight: 600;
        }
    </style>
</head>

<body class="bg-gray-50 font-sans">

    <div class="border-b bg-white">
        <div class="max-w-7xl mx-auto px-6 py-6 flex items-center gap-3">
            <div class="h-10 w-10 bg-blue-600 rounded-lg flex items-center justify-center text-white font-bold text-xl">
                📊
            </div>
            <div>
                <h1 class="text-lg font-semibold">@ViewData["Title"]</h1>
                <p class="text-gray-500 text-sm">Thống kê và chi tiết công việc theo trạng thái</p>
            </div>
        </div>
    </div>

    <div class="max-w-7xl mx-auto px-6 py-8 space-y-6">

        <div class="flex items-center justify-between">
            <h1 class="text-md text-gray-700 font-semibold">
                Tổng số công việc trong báo cáo: @totalCount
            </h1>
        </div>

        <div class="bg-white shadow rounded-lg p-4 mb-6">
            <h3 class="text-lg font-semibold text-gray-800 mb-3">Lọc báo cáo</h3>
            <form asp-action="DailyReport" method="get" class="space-y-4">
                <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
                    <div>
                        <label for="searchStaff" class="block text-sm font-medium text-gray-700 mb-1">Tên nhân viên</label>
                        <input type="text" id="searchStaff" name="searchStaff"
                               value="@ViewData["CurrentStaffFilter"]"
                               class="w-full border rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
                               placeholder="Nhập tên nhân viên...">
                    </div>

                    <div>
                        <label for="searchManager" class="block text-sm font-medium text-gray-700 mb-1">Tên quản lý</label>
                        <input type="text" id="searchManager" name="searchManager"
                               value="@ViewData["CurrentManagerFilter"]"
                               class="w-full border rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
                               placeholder="Nhập tên quản lý...">
                    </div>

                    <div>
                        <label for="searchStartDate" class="block text-sm font-medium text-gray-700 mb-1">Từ ngày</label>
                        <input type="date" id="searchStartDate" name="searchStartDate"
                               value="@ViewData["CurrentStartDateFilter"]"
                               class="w-full border rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
                    </div>

                    <div>
                        <label for="searchEndDate" class="block text-sm font-medium text-gray-700 mb-1">Đến ngày</label>
                        <input type="date" id="searchEndDate" name="searchEndDate"
                               value="@ViewData["CurrentEndDateFilter"]"
                               class="w-full border rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
                    </div>
                </div>

                <div class="flex justify-end gap-3 pt-2">
                    <a asp-action="DailyReport" class="px-4 py-2 border rounded-md text-gray-600 hover:bg-gray-100">
                        Xóa lọc
                    </a>
                    <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700">
                        Lọc
                    </button>
                </div>
            </form>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">

            <div class="md:col-span-1">
                <h3 class="text-lg font-semibold text-gray-800 mb-3">Thống kê</h3>
                <div class="overflow-hidden bg-white shadow rounded-lg">
                    <table class="min-w-full text-sm">
                        <thead class="bg-gray-100 text-gray-700">
                            <tr>
                                <th class="px-4 py-3 text-left">Trạng thái</th>
                                <th class="px-4 py-3 text-left">Số lượng</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr class="border-b cursor-pointer hover:bg-gray-50 status-row"
                                onclick="filterByStatus(-1)"
                                data-status-row="-1">
                                <td class="px-4 py-3 font-medium">Tất cả công việc</td>
                                <td class="px-4 py-3 font-medium">@totalCount</td>
                            </tr>

                            @foreach (var entry in statusMap)
                            {
                                <tr class="border-b cursor-pointer hover:bg-gray-50 status-row"
                                    onclick="filterByStatus(@entry.Key)"
                                    data-status-row="@entry.Key">
                                    <td class="px-4 py-3">
                                        <span class="px-2 py-1 text-xs font-medium rounded @entry.Value.Color">
                                            @entry.Value.Label
                                        </span>
                                    </td>
                                    <td class="px-4 py-3 font-medium">
                                        @countsByStatus[entry.Key]
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="md:col-span-2">
                <h3 class="text-lg font-semibold text-gray-800 mb-3">Danh sách công việc theo trạng thái</h3>
                <div class="overflow-x-auto bg-white shadow rounded-lg">
                    <table class="min-w-full text-sm">
                        <thead class="bg-gray-100 text-gray-700">
                            <tr>
                                <th class="px-4 py-3 text-left">Mã CV</th>
                                <th class="px-4 py-3 text-left">Tên công việc</th>
                                <th class="px-4 py-3 text-left">Nhân viên</th>
                                <th class="px-4 py-3 text-left">Người quản lý</th>
                                <th class="px-4 py-3 text-left">Thời hạn</th>
                                <th class="px-4 py-3 text-left">Trạng thái</th>
                            </tr>
                        </thead>
                        <tbody id="taskDetailBody">
                            @if (tasks.Any())
                            {
                                foreach (var task in tasks)
                                {
                                    // Thêm data-task-status để JS có thể lọc
                                    <tr class="border-b hover:bg-gray-50" data-task-status="@task.Status">
                                        <td class="px-4 py-3">@task.TaskId</td>
                                        <td class="px-4 py-3 font-medium text-gray-800">@task.TaskName</td>
                                        <td class="px-4 py-3">@((task.Staff?.FullName) ?? "—")</td>
                                        <td class="px-4 py-3">@((task.Manager?.FullName) ?? "—")</td>
                                        <td class="px-4 py-3">@((task.DueTime?.ToString("dd/MM/yyyy HH:mm")) ?? "—")</td>
                                        <td class="px-4 py-3 whitespace-nowrap">
                                            @{
                                                // 1. Định nghĩa giá trị mặc định
                                                var defaultStatus = (Label: "Không xác định", Color: "bg-gray-400");

                                                // 2. Thử lấy giá trị từ map
                                                if (!statusMap.TryGetValue((int)task.Status, out var statusInfo))
                                                {
                                                    // 3. Nếu không tìm thấy, gán giá trị mặc định
                                                    statusInfo = defaultStatus;
                                                }
                                            }
                                            <span class="px-2 py-1 text-xs font-medium rounded @statusInfo.Color">
                                                @statusInfo.Label
                                            </span>
                                        </td>
                                    </tr>
                                }
                            }

                            <tr id="no-tasks-row" class="@(tasks.Any() ? "hidden" : "")">
                                <td colspan="6" class="text-center text-gray-500 py-4">
                                    Không có công việc nào được hiển thị.
                                </td>
                            </tr>

                            <tr id="no-filtered-tasks-row" class="hidden">
                                <td colspan="6" class="text-center text-gray-500 py-4">
                                    Không có công việc nào khớp với trạng thái đã chọn.
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

        </div>

    </div>

    <script>
        function filterByStatus(status) {
            const taskRows = document.querySelectorAll('#taskDetailBody tr[data-task-status]');
            const summaryRows = document.querySelectorAll('.status-row[data-status-row]');
            const noTasksRow = document.getElementById('no-tasks-row');
            const noFilteredTasksRow = document.getElementById('no-filtered-tasks-row');

            let hasVisibleTasks = false;

            // 1. Cập nhật giao diện Bảng 1 (Thống kê)
            summaryRows.forEach(row => {
                if (row.getAttribute('data-status-row') == status) {
                    row.classList.add('active');
                } else {
                    row.classList.remove('active');
                }
            });

            // 2. Ẩn/hiện các hàng ở Bảng 2 (Chi tiết)
            taskRows.forEach(row => {
                const taskStatus = row.getAttribute('data-task-status');

                if (status == -1) { // -1 là "Tất cả"
                    row.classList.remove('hidden');
                    hasVisibleTasks = true;
                } else if (taskStatus == status) {
                    row.classList.remove('hidden');
                    hasVisibleTasks = true;
                } else {
                    row.classList.add('hidden');
                }
            });

            // 3. Xử lý hàng "Không có dữ liệu"
            // Ẩn cả hai hàng thông báo trước
            if (noTasksRow) noTasksRow.classList.add('hidden');
            if (noFilteredTasksRow) noFilteredTasksRow.classList.add('hidden');

            if (!hasVisibleTasks) {
                // Nếu không có task nào hiển thị
                if (taskRows.length > 0) {
                    // (Có task, nhưng không khớp bộ lọc)
                    if (noFilteredTasksRow) noFilteredTasksRow.classList.remove('hidden');
                } else {
                    // (Thực sự không có task nào từ đầu)
                    if (noTasksRow) noTasksRow.classList.remove('hidden');
                }
            }
        }

        // Chạy hàm lọc khi tải trang, hiển thị "Tất cả"
        document.addEventListener('DOMContentLoaded', function() {
            filterByStatus(-1);
        });
    </script>

</body>
</html> *@