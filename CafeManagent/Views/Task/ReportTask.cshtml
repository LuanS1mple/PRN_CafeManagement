    var tasks = Model ?? new List<CafeManagent.Models.Task>();

    // Định nghĩa map trạng thái để dễ dàng lặp lại và hiển thị
    var statusMap = new Dictionary<int, (string Label, string Color)>
    {
        { 0, ("Pending", "bg-gray-400 text-white") },
        { 1, ("Doing", "bg-yellow-500 text-white") },
        { 2, ("Done", "bg-green-600 text-white") },
        { 3, ("Cancelled", "bg-orange-500 text-white") },
        { 4, ("Not start", "bg-red-700 text-white") }
    };

    // Tính toán số lượng cho từng trạng thái
    var totalCount = tasks.Count();
    var countsByStatus = statusMap.ToDictionary(
