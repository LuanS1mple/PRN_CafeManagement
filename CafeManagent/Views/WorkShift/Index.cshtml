@model IEnumerable<dynamic>
@{
    ViewData["Title"] = "Quản lý ca làm";
}

<div class="container-fluid py-4">
    <!-- Alert Messages -->
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fa-solid fa-circle-exclamation me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fa-solid fa-circle-check me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-2">
        <div>
            <h1 class="mb-0">Quản lý ca làm - Cafe</h1>
            <p class="text-muted mb-0">Quản lý lịch làm việc và phân ca cho nhân viên quán cafe</p>
        </div>
        <div>
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addShiftModal">
                <i class="fa-solid fa-plus"></i> Thêm
            </button>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card shadow-sm border-0">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <p class="text-muted mb-1">Tổng ca làm</p>
                        <h3 class="mb-0">@ViewBag.TotalShifts</h3>
                    </div>
                    <div class="bg-warning bg-opacity-10 p-3 rounded">
                        <i class="fa-solid fa-calendar text-warning fs-4"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm border-0">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <p class="text-muted mb-1">Nhân viên</p>
                        <h3 class="mb-0">@ViewBag.TotalEmployees</h3>
                    </div>
                    <div class="bg-info bg-opacity-10 p-3 rounded">
                        <i class="fa-solid fa-users text-info fs-4"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm border-0">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <p class="text-muted mb-1">Ca hôm nay</p>
                        <h3 class="mb-0">@ViewBag.TodayShifts</h3>
                    </div>
                    <div class="bg-success bg-opacity-10 p-3 rounded">
                        <i class="fa-solid fa-briefcase text-success fs-4"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm border-0">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <p class="text-muted mb-1">Tổng giờ làm</p>
                        <h3 class="mb-0">@($"{ViewBag.TotalHours:0.#}")h</h3>
                    </div>
                    <div class="bg-purple bg-opacity-10 p-3 rounded">
                        <i class="fa-solid fa-clock text-primary fs-4"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filter -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <form class="row g-3 align-items-end" 
            asp-controller="WorkShift" 
            asp-action="FilterWorkShift" 
            method="post">

                <div class="col-md-3">
                    <label class="form-label">Tìm kiếm</label>
                    <input type="text" name="Keyword" class="form-control" placeholder="Tên, vị trí..." />
                </div>

                <div class="col-md-2">
                    <label class="form-label">Vị trí</label>
                    <select name="Position" class="form-select">
                        <option value="">Tất cả</option>
                        @foreach (var pos in ViewBag.Positions as List<string>)
                        {
                            <option value="@pos">@pos</option>
                        }
                    </select>
                </div>

                <div class="col-md-2">
                    <label class="form-label">Loại ca</label>
                    <select name="ShiftType" class="form-select">
                        <option value="">Tất cả</option>
                        @foreach (var shiftType in ViewBag.ShiftTypes as List<string>)
                        {
                            <option value="@shiftType">@shiftType</option>
                        }
                    </select>
                </div>

                <div class="col-md-2">
                    <label class="form-label">Từ ngày</label>
                    <input type="date" name="FromDate" class="form-control" />
                </div>

                <div class="col-md-2">
                    <label class="form-label">Đến ngày</label>
                    <input type="date" name="ToDate" class="form-control" />
                </div>

                <div class="col-md-1 text-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fa-solid fa-magnifying-glass"></i> Search
                    </button>
                </div>
            </form>        
        </div>
    </div>


    <!-- Table -->
    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <table class="table table-hover mb-0 align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Nhân viên</th>
                        <th>Ngày làm việc</th>
                        <th>Vị trí</th>
                        <th>Loại ca</th>
                        <th>Giờ làm</th>
                        <th>Tổng giờ</th>
                        <th>Mô tả</th>
                        <th class="text-end">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var shift in Model)
                    {
                            <tr>
                                <td>@shift.Employee</td>
                                <td>@shift.Date?.ToString("dd/MM/yyyy")</td>
                                <td>@shift.Position</td>
                                <td>
                                    <span class="badge bg-secondary">@shift.ShiftType</span>
                                </td>
                                <td>@shift.StartTime - @shift.EndTime</td>
                                <td>@($"{shift.TotalHours:0.#}")</td>
                                <td>@shift.Description</td>
                                <td class="text-end">
                                    <button type="button"
                                            class="btn btn-sm btn-outline-primary me-2"
                                            data-bs-toggle="modal"
                                            data-bs-target="#editShiftModal"
                                            data-shiftid="@shift.ShiftId"
                                            data-employee="@shift.Employee"
                                            data-date="@(shift.Date?.ToString("yyyy-MM-dd") ?? "")"
                                            data-shifttype="@shift.ShiftType"
                                            data-note="@(shift.Description ?? "")">
                                        <i class="fa-solid fa-pen"></i>
                                    </button>

                                    <form asp-controller="WorkShift"
                                          asp-action="DeleteWorkShift"
                                          method="post"
                                          style="display:inline;">
                                        <input type="hidden" name="id" value="@shift.ShiftId" />
                                        <button type="submit"
                                                class="btn btn-sm btn-outline-danger"
                                                onclick="return confirm('Bạn có chắc muốn xóa ca làm này không?');">
                                            <i class="fa-solid fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>
@if (ViewBag.TotalPages > 1)
{
        <nav class="mt-3">
            <ul class="pagination justify-content-center">

                <li class="page-item @(ViewBag.Page == 1 ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = ViewBag.Page - 1, pageSize = ViewBag.PageSize })">«</a>
                </li>

            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                        <li class="page-item @(i == ViewBag.Page ? "active" : "")">
                            <a class="page-link" href="@Url.Action("Index", new { page = i, pageSize = ViewBag.PageSize })">@i</a>
                        </li>
            }

                <li class="page-item @(ViewBag.Page == ViewBag.TotalPages ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = ViewBag.Page + 1, pageSize = ViewBag.PageSize })">»</a>
                </li>
            </ul>
        </nav>
}


<!-- Add Modal -->
<div class="modal fade" id="addShiftModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header">
                <h5 class="modal-title">Thêm ca làm mới</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <!-- Gửi dữ liệu tới WorkShift/AddWorkShift -->
                <form asp-controller="WorkShift" asp-action="AddWorkShift" method="post">

                    <div class="mb-3">
                        <label class="form-label">Tên nhân viên</label>
                        <select name="EmployeeName" class="form-select" required>
                            <option value="">-- Chọn nhân viên --</option>
                                                @foreach (var emp in ViewBag.Employees as List<string>)
                                                {
                                    <option value="@emp">@emp</option>
                                                }
                        </select>
                    </div>


                    <div class="mb-3">
                        <label class="form-label">Ngày làm việc</label>
                        <input type="date" name="Date" class="form-control" required />
                    </div>


                    <div class="mb-3">
                        <label class="form-label">Loại ca</label>
                        <select name="ShiftType" class="form-select" required>
                            <option value="">-- Chọn loại ca --</option>
                            @foreach (var shiftType in ViewBag.ShiftTypes as List<string>)
                            {
                                <option value="@shiftType">@shiftType</option>
                            }
                        </select>
                    </div>


                    <div class="mb-3">
                        <label class="form-label">Ghi chú</label>
                        <textarea name="Note" class="form-control" rows="2"></textarea>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Hủy</button>
                        <button type="submit" class="btn btn-primary">Thêm ca làm</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<!-- Edit Modal -->
<div class="modal fade" id="editShiftModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header">
                <h5 class="modal-title">Chỉnh sửa ca làm</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <form asp-controller="WorkShift" asp-action="UpdateWorkShift" method="post">
                <div class="modal-body">
                    <input type="hidden" name="ShiftId" id="editShiftId" />

                    <div class="mb-3">
                        <label class="form-label">Tên nhân viên</label>
                        <select name="EmployeeName" id="editEmployeeName" class="form-select" required>
                            @foreach (var emp in ViewBag.Employees as List<string>)
                            {
                                    <option value="@emp">@emp</option>
                            }
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Ngày làm việc</label>
                        <input type="date" name="Date" id="editDate" class="form-control" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Loại ca</label>
                        <select name="ShiftType" id="editShiftType" class="form-select" required>
                            @foreach (var shiftType in ViewBag.ShiftTypes as List<string>)
                            {
                                    <option value="@shiftType">@shiftType</option>
                            }
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Ghi chú</label>
                        <textarea name="Note" id="editNote" class="form-control" rows="2"></textarea>
                    </div>
                </div>

                <div class="modal-footer">
                    <button class="btn btn-outline-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                </div>
            </form>
        </div>
    </div>
</div>


<script>
document.addEventListener('DOMContentLoaded', function () {
    document.getElementById('editShiftModal').addEventListener('show.bs.modal', function (event) {
        const btn = event.relatedTarget;
        document.getElementById('editShiftId').value = btn.dataset.shiftid;
        document.getElementById('editEmployeeName').value = btn.dataset.employee;
        document.getElementById('editDate').value = btn.dataset.date;
        document.getElementById('editShiftType').value = btn.dataset.shifttype;
        document.getElementById('editNote').value = btn.dataset.note;
    });
});
</script>


    

