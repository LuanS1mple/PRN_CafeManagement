@{
    ViewData["Title"] = "Quản lý ca làm";
}

<div class="container-fluid">
    <h1 class="mt-4">Quản lý ca làm - Cafe</h1>
    <p class="text-muted">Quản lý lịch làm việc và phân ca cho nhân viên quán cafe</p>

    <!-- Summary Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card shadow-sm border-0">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <p class="text-muted mb-1">Tổng ca làm</p>
                        <h3 class="mb-0">@Model.TotalShifts</h3>
                    </div>
                    <div class="bg-warning bg-opacity-10 p-3 rounded">
                        <i class="fa-solid fa-calendar text-warning fs-4"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm border-0">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <p class="text-muted mb-1">Nhân viên</p>
                        <h3 class="mb-0">@Model.TotalEmployees</h3>
                    </div>
                    <div class="bg-info bg-opacity-10 p-3 rounded">
                        <i class="fa-solid fa-users text-info fs-4"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm border-0">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <p class="text-muted mb-1">Ca hôm nay</p>
                        <h3 class="mb-0">@Model.TodayShifts</h3>
                    </div>
                    <div class="bg-success bg-opacity-10 p-3 rounded">
                        <i class="fa-solid fa-briefcase text-success fs-4"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm border-0">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <p class="text-muted mb-1">Tổng giờ làm</p>
                        <h3 class="mb-0">@Model.TotalHours h</h3>
                    </div>
                    <div class="bg-purple bg-opacity-10 p-3 rounded">
                        <i class="fa-solid fa-clock text-primary fs-4"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filter + Add button -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <form method="get" class="row g-3 align-items-end">
                <div class="col-md-3">
                    <label class="form-label">Tìm kiếm</label>
                    <input type="text" name="search" class="form-control" placeholder="Tên, vị trí..." value="@Model.Search" />
                </div>

                <div class="col-md-2">
                    <label class="form-label">Vị trí</label>
                    <select class="form-select" name="position">
                        <option value="">Tất cả</option>
                        <option>Barista</option>
                        <option>Phục vụ</option>
                        <option>Quản lý ca</option>
                        <option>Thu ngân</option>
                    </select>
                </div>

                <div class="col-md-2">
                    <label class="form-label">Loại ca</label>
                    <select class="form-select" name="shiftType">
                        <option value="">Tất cả</option>
                        <option>Ca sáng</option>
                        <option>Ca chiều</option>
                        <option>Ca tối</option>
                        <option>Full ca</option>
                    </select>
                </div>

                <div class="col-md-2">
                    <label class="form-label">Từ ngày</label>
                    <input type="date" name="fromDate" class="form-control" />
                </div>

                <div class="col-md-2">
                    <label class="form-label">Đến ngày</label>
                    <input type="date" name="toDate" class="form-control" />
                </div>

                <div class="col-md-1 text-end">
                    <a asp-action="Create" class="btn btn-primary w-100">
                        <i class="fa-solid fa-plus"></i> Thêm
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Data Table -->
    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <table class="table table-hover mb-0 align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Nhân viên</th>
                        <th>Ngày làm việc</th>
                        <th>Vị trí</th>
                        <th>Loại ca</th>
                        <th>Giờ làm</th>
                        <th>Tổng giờ</th>
                        <th class="text-end">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Shifts.Any())
                    {
                        foreach (var shift in Model.Shifts)
                        {
                                    <tr>
                                        <td>@shift.Employee</td>
                                        <td>@shift.Date.ToString("dd/MM/yyyy")</td>
                                        <td>@shift.Position</td>
                                        <td>
                                            <span class="badge bg-@(shift.ShiftType switch {
                                        "Ca sáng" => "warning",
                                        "Ca chiều" => "info",
                                        "Ca tối" => "primary",
                                        "Full ca" => "purple",
                                        _ => "secondary"
                                    })">@shift.ShiftType</span>
                                        </td>
                                        <td>@shift.StartTime - @shift.EndTime</td>
                                        <td>@shift.TotalHours</td>
                                        <td class="text-end">
                                            <a asp-action="Edit" asp-route-id="@shift.Id" class="btn btn-sm btn-outline-primary me-2">
                                                <i class="fa-solid fa-pen"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@shift.Id" class="btn btn-sm btn-outline-danger">
                                                <i class="fa-solid fa-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                        }
                    }
                    else
                    {
                            <tr>
                                <td colspan="7" class="text-center text-muted py-4">
                                    Không tìm thấy ca làm nào
                                </td>
                            </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
