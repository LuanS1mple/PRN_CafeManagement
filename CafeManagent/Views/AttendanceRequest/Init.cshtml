@using CafeManagent.dto.request;
@model AttendanceRequestDTO;

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tạo yêu cầu sửa Attendance</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/AttendanceRequest.css">
</head>
<body>
    <div class="d-flex">
    

        <!-- Main content -->
        <div class="flex-grow-1 d-flex flex-column vh-100">
            <!-- Topbar -->
            <header class="navbar navbar-expand-lg bg-white border-bottom px-4">
                <span class="navbar-brand mb-0 h5">Tạo yêu cầu sửa Attendance</span>
                <div class="ms-auto d-flex align-items-center gap-3">
                    <span>Xin chào, Nguyễn Văn A</span>
                    <img src="https://via.placeholder.com/32" class="rounded-circle" alt="avatar">
                </div>
            </header>

            <!-- Content -->
            <main class="flex-grow-1 overflow-auto p-4 bg-body-secondary">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-4">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item"><a href="#">Attendance</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Tạo yêu cầu</li>
                    </ol>
                </nav>

                <div class="row g-4">
                    <!-- Form -->
                    <div class="col-lg-8">
                        <div class="card p-4 shadow-sm">
                            <form id="attendanceForm" novalidate>
                                <div class="mb-3">
                                    <label for="workDate" class="form-label">Ngày làm việc *</label>
                                    <input type="date" id="workDate" class="form-control" required>
                                    <div class="invalid-feedback">Vui lòng chọn ngày làm việc</div>
                                </div>

                                <div class="mb-3">
                                    <label for="currentCheckIn" class="form-label">Giờ check-in (hiện tại)</label>
                                    <input type="time" id="currentCheckIn" class="form-control" value="08:30" readonly>
                                </div>

                                <div class="mb-3">
                                    <label for="proposedCheckIn" class="form-label">Giờ check-in đề xuất *</label>
                                    <input type="time" id="proposedCheckIn" class="form-control" required>
                                    <div class="invalid-feedback">Vui lòng nhập giờ check-in đề xuất</div>
                                </div>

                                <div class="mb-3">
                                    <label for="currentCheckOut" class="form-label">Giờ check-out (hiện tại)</label>
                                    <input type="time" id="currentCheckOut" class="form-control" value="17:15" readonly>
                                </div>

                                <div class="mb-3">
                                    <label for="proposedCheckOut" class="form-label">Giờ check-out đề xuất *</label>
                                    <input type="time" id="proposedCheckOut" class="form-control" required>
                                    <div class="invalid-feedback">Vui lòng nhập giờ check-out đề xuất</div>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Loại lỗi *</label>
                                    <div>
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" name="errorType" value="forgot" required>
                                            <label class="form-check-label">Quên chấm</label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" name="errorType" value="wrong_time">
                                            <label class="form-check-label">Sai giờ</label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" name="errorType" value="leave">
                                            <label class="form-check-label">Nghỉ có phép</label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" name="errorType" value="other">
                                            <label class="form-check-label">Khác</label>
                                        </div>
                                    </div>
                                    <div class="invalid-feedback d-block" id="errorTypeFeedback"></div>
                                </div>

                                <div class="mb-3">
                                    <label for="reason" class="form-label">Lý do chi tiết *</label>
                                    <textarea id="reason" rows="4" class="form-control" required></textarea>
                                    <div class="invalid-feedback">Vui lòng nhập lý do chi tiết</div>
                                </div>

                                <div class="d-flex gap-2 border-top pt-3">
                                    <button type="reset" class="btn btn-outline-secondary">Hủy</button>
                                    <button type="submit" class="btn btn-primary ms-auto">Gửi yêu cầu</button>
                                </div>
                            </form>
                        </div>
                    </div>

                </div>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="script.js"></script>
</body>
</html>
