@using CafeManagent.dto.request.RequestModuleDTO;
@model AttendanceRequestDTO;

<script src="~/js/AttendanceRequest_Init.js"></script>
<div class="p-4 bg-body-secondary min-vh-100">
    <div class="page-header mb-4 d-flex align-items-center justify-content-between">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="#">Home</a></li>
                <li class="breadcrumb-item"><a href="#">Attendance</a></li>
                <li class="breadcrumb-item active" aria-current="page">Tạo yêu cầu</li>
            </ol>
        </nav>
        <h5 class="fw-semibold text-primary mb-0">
            <i class="fa-solid fa-calendar-check me-2"></i> Tạo yêu cầu chấm công
        </h5>
    </div>

    <div class="container-request">
        <div class="card shadow-sm p-4">
            <form asp-action="SubmitRequest" id="attendanceForm" method="post">

                <div class="mb-3">
                    <label asp-for="WorkDate" class="form-label">Ngày làm việc *</label>
                    <input asp-for="WorkDate" type="date" id="workDate" class="form-control @(ViewData.ModelState["WorkDate"]?.Errors.Count > 0 ? "is-invalid" : "")">
                    <span asp-validation-for="WorkDate" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="WorkShiftId" class="form-label">Ca làm việc *</label>
                    <select asp-for="WorkShiftId" id="workshift" class="form-select @(ViewData.ModelState["WorkShiftId"]?.Errors.Count > 0 ? "is-invalid" : "")">
                        <option value="">-- Chọn ca làm việc --</option>
                        <option value="1">Ca 1</option>
                        <option value="2">Ca 2</option>
                        <option value="3">Ca 3</option>
                        <option value="4">Ca 4</option>
                    </select>
                    <span asp-validation-for="WorkShiftId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="currentCheckIn" class="form-label">Giờ check-in (hiện tại)</label>
                    <input type="time" id="currentCheckIn" class="form-control" readonly>
                </div>

                <div class="mb-3">
                    <label asp-for="UpdateCheckIn" class="form-label">Giờ check-in thay đổi *</label>
                    <input asp-for="UpdateCheckIn" type="time" id="proposedCheckIn" class="form-control @(ViewData.ModelState["UpdateCheckIn"]?.Errors.Count > 0 ? "is-invalid" : "")">
                    <span asp-validation-for="UpdateCheckIn" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="currentCheckOut" class="form-label">Giờ check-out (hiện tại)</label>
                    <input type="time" id="currentCheckOut" class="form-control" readonly>
                </div>

                <div class="mb-3">
                    <label asp-for="UpdateCheckOut" class="form-label">Giờ check-out thay đổi *</label>
                    <input asp-for="UpdateCheckOut" type="time" id="proposedCheckOut" class="form-control @(ViewData.ModelState["UpdateCheckOut"]?.Errors.Count > 0 ? "is-invalid" : "")">
                    <span asp-validation-for="UpdateCheckOut" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Loại lỗi *</label>
                    <div>
                        <div class="form-check form-check-inline">
                            <input asp-for="Type" class="form-check-input @(ViewData.ModelState["Type"]?.Errors.Count > 0 ? "is-invalid" : "")" type="radio" name="Type" value="forgot">
                            <label class="form-check-label">Quên chấm</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input asp-for="Type" class="form-check-input @(ViewData.ModelState["Type"]?.Errors.Count > 0 ? "is-invalid" : "")" type="radio" name="Type" value="wrong_time">
                            <label class="form-check-label">Sai giờ</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input asp-for="Type" class="form-check-input @(ViewData.ModelState["Type"]?.Errors.Count > 0 ? "is-invalid" : "")" type="radio" name="Type" value="leave">
                            <label class="form-check-label">Nghỉ có phép</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input asp-for="Type" class="form-check-input @(ViewData.ModelState["Type"]?.Errors.Count > 0 ? "is-invalid" : "")" type="radio" name="Type" value="other">
                            <label class="form-check-label">Khác</label>
                        </div>
                    </div>
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Reason" class="form-label">Lý do chi tiết *</label>
                    <textarea asp-for="Reason" id="reason" rows="4" class="form-control @(ViewData.ModelState["Reason"]?.Errors.Count > 0 ? "is-invalid" : "")"></textarea>
                    <span asp-validation-for="Reason" class="text-danger"></span>
                </div>

                <div class="d-flex gap-2 border-top pt-3">
                    <button type="reset" class="btn btn-outline-secondary">Hủy</button>
                    <button type="submit" class="btn btn-primary ms-auto">Gửi yêu cầu</button>
                </div>
            </form>
        </div>
    </div>
</div>
