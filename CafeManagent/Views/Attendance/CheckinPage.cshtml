@model CafeManagent.Models.WorkSchedule

<div class="container d-flex justify-content-center align-items-center" style="min-height: 90vh;">
    <div class="card shadow border-0 rounded-4 p-4" style="max-width: 550px; width: 100%;">
        <div class="text-center mb-4">
            <h3 class="fw-bold text-teal">
                 Điểm danh ca làm
            </h3>
            <p class="text-muted mb-0">Kiểm tra thông tin trước khi thực hiện Check-in / Check-out</p>
        </div>

        <div class="mb-3">
            <label class="fw-semibold text-muted">Nhân viên:</label>
            <div class="form-control bg-light border-0"></div>
        </div>

        <div class="mb-3">
            <label class="fw-semibold text-muted">Ca làm:</label>
            <div class="form-control bg-light border-0"></div>
        </div>

        <div class="mb-3">
            <label class="fw-semibold text-muted">Giờ làm:</label>
            <div class="form-control bg-light border-0">
                @* @Model.Workshift.StartTime - @Model.Workshift.EndTime *@
            </div>
        </div>

        <div class="mb-4">
            <label class="fw-semibold text-muted">Ngày làm:</label>
            <div class="form-control bg-light border-0"></div>
        </div>

        <div class="d-flex justify-content-center gap-3">
            <form method="post" asp-action="CheckIn" asp-controller="Attendance">
                @* <input type="hidden" name="staffId" value="@Model.StaffId" /> *@
                @* <input type="hidden" name="shiftId" value="@Model.ShiftId" /> *@
                <button class="btn btn-teal px-4 py-2 rounded-pill shadow-sm" type="submit">
                    <i class="bi bi-box-arrow-in-right me-1"></i> Check-In
                </button>
            </form>

            <form method="post" asp-action="CheckOut" asp-controller="Attendance">
                @* <input type="hidden" name="staffId" value="@Model.StaffId" /> *@
                @* <input type="hidden" name="shiftId" value="@Model.ShiftId" /> *@
                <button class="btn btn-outline-teal px-4 py-2 rounded-pill shadow-sm" type="submit">
                    <i class="bi bi-box-arrow-right me-1"></i> Check-Out
                </button>
            </form>
        </div>
    </div>
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<!-- Custom màu xanh Cafe Manager -->
<style>
    body {
        background-color: #E8F5F9; /* nền xanh nhạt nhẹ */
    }

    .text-teal {
        color: #0097A7 !important;
    }

    .btn-teal {
        background-color: #0097A7;
        color: white;
        border: none;
        transition: 0.3s;
    }

    .btn-teal:hover {
        background-color: #007E8A;
    }

    .btn-outline-teal {
        color: #0097A7;
        border: 2px solid #0097A7;
        background-color: transparent;
        transition: 0.3s;
    }

    .btn-outline-teal:hover {
        background-color: #0097A7;
        color: white;
    }
</style>
