@{
    ViewData["Title"] = "Đăng nhập";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cafe Manager</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        /* CSS tùy chỉnh để mô phỏng giao diện */
        body, html {
            height: 100%;
            margin: 0;
            font-family: Arial, sans-serif; /* Có thể thay thế font theo ý muốn */
            background-color: #f0f7fb; /* Màu nền nhạt bên phải */
        }

        .login-container {
            display: flex;
            height: 100vh;
        }

        .image-panel {
            flex: 1; /* Chiếm 50% chiều rộng */
            background-image: url('duong_dan_den_hinh_anh_quan_cafe.jpg'); /* Thay đổi đường dẫn ảnh */
            background-size: cover;
            background-position: center;
        }

        .form-panel {
            flex: 1; /* Chiếm 50% chiều rộng */
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 2rem;
            background-color: #f0f7fb; /* Màu nền nhạt */
        }

        .cafe-manager-header {
            width: 100%;
            max-width: 450px; /* Độ rộng tối đa của form */
            margin-bottom: 2rem;
            color: #17a2b8; /* Màu xanh của biểu tượng và chữ */
            font-size: 1.5rem;
            font-weight: bold;
            display: flex;
            align-items: center;
        }

        .login-form-card {
            background: white;
            padding: 2.5rem;
            border-radius: 0.5rem;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 450px;
        }

        .form-label-custom {
            font-weight: 500;
            margin-bottom: 0.25rem;
        }

        /* Màu cho nút Đăng nhập */
        .btn-primary-custom {
            background-color: #17a2b8; /* Màu xanh đậm */
            border-color: #17a2b8;
        }

        .btn-primary-custom:hover {
             background-color: #138496;
             border-color: #138496;
        }

        .forgot-password {
            color: #17a2b8; /* Màu xanh cho link Quên mật khẩu */
            font-weight: 500;
            text-decoration: none;
        }

        .footer-controls {
            width: 100%;
            max-width: 450px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 2rem;
            padding: 0 15px; /* Điều chỉnh padding cho phù hợp */
        }

        .language-selector {
            display: flex;
            align-items: center;
        }

        /* Biểu tượng ly cafe (ví dụ: sử dụng Font Awesome) */
        .cafe-icon::before {
             content: "\f0f4"; /* Mã Font Awesome cho ly cà phê */
             font-family: 'Font Awesome 5 Free'; /* Tên font family */
             font-weight: 900; /* Dùng phiên bản solid */
             margin-right: 0.5rem;
        }
    </style>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>
<body>
    <div class="login-container">
            <img class="image-panel" src="https://amthanhhay.com.vn/wp-content/uploads/2024/09/thom-cau-coffee-19.jpg" />
           

        <div class="form-panel">

            <div class="cafe-manager-header">
                <i class="fas fa-coffee me-2" style="color: #17a2b8;"></i>
                <span>Cafe Manager111</span>
            </div>

            <div class="login-form-card">
                <form action="/Home/ProcessLogin" method="post"> <div class="mb-3">
                        <label for="emailInput" class="form-label form-label-custom">Username <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="UsernameInput" name="username" placeholder="Username" required>
                    </div>

                    <div class="mb-4">
                        <label for="passwordInput" class="form-label form-label-custom">Password <span class="text-danger">*</span></label>
                        <input type="password" class="form-control" id="passwordInput" name="Password" placeholder="Mật khẩu" required>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="rememberMe" name="RememberMe" value="true">
                            <label class="form-check-label" for="rememberMe">
                                Remember me
                            </label>
                        </div>
                        <a asp-controller="Account" asp-action="ForgotPassword" class="forgot-password">Quên mật khẩu?</a>

                    </div>
                    @if (ViewBag.ErrorMessage != null)
                    {
        <div class="alert alert-danger mt-3">@ViewBag.ErrorMessage</div>
                    }

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-primary-custom py-2">Đăng nhập</button>
                    </div>
                </form>
            </div>

            <div class="footer-controls">
                <div class="d-flex align-items-center">
                    <i class="fas fa-sun me-2 text-secondary"></i>
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="darkModeSwitch">
                        <label class="form-check-label" for="darkModeSwitch" style="display: none;"></label>
                    </div>
                    <i class="fas fa-moon ms-2 text-secondary"></i>
                </div>

                <div class="language-selector">
                    <i class="fas fa-globe me-2 text-secondary"></i>
                    <span class="text-secondary me-3">VI</span>
                    <button class="btn btn-sm btn-light rounded-circle" style="width: 30px; height: 30px; line-height: 15px; border: 1px solid #ccc; font-weight: bold; background-color: white;">
                        ?
                    </button>
                </div>
            </div>

        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
